@model Group2_iCLOTHINGApp.Models.Customer

@{
    ViewBag.Title = "CustomerRegistrationForm";
}

<h2>CustomerRegistrationForm</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Registration Form</h4>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <form action="#" method="post">
        <div>
            <label for="name">Name: </label>
            <input type="text" id="name" name="customerName" required />
        </div>
        <div>
            <label for="shippingAddress">Shipping Address: </label>
            <input type="text" id="shippingAddress" name="customerShippingAddress" required />
        </div>
        <div>
            <label for="billingAddress">Billing Address: </label>
            <input type="text" id="billingAddress" name="customerBillingAddress" required />
        </div>
        <div>
            <label for="DOB">DOB: </label>
            <input type="text" id="DOB" name="customerDOB" required />
        </div>
        <div>
            <label for="gender">Gender: </label>
            <input type="text" id="gender" name="customerGender" required />
        </div>
        @*<div>
            <label for="email">Email: </label>
            <input type="email" id="email" name="email" required />
        </div>*@
        <div>
            <label for="password">Password: </label>
            <input type="password" id="password" name="password" required />
            <button type="submit">Submit registration</button>
        </div>
    </form>
}

